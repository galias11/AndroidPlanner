<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:src="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loading_color_gradient_01">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:background="@color/grey_800"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/loading_screen_text_01"
                    android:textAlignment="gravity"
                    android:textSize="30dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="85"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="100">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="10"
                        android:background="@color/grey_800">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@color/grey_800"
                            android:text="VER EVENTO"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="90">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="470dp"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <android.support.v4.widget.Space
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:layout_height="match_parent" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="90"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <android.support.v4.widget.Space
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal"
                                    android:weightSum="100">

                                    <TextView
                                        android:id="@+id/task_event_view_title"
                                        android:layout_width="0dp"
                                        android:layout_weight="70"
                                        android:layout_height="match_parent"
                                        android:textSize="22sp"
                                        android:textStyle="bold"
                                        android:text="Event test"
                                        android:background="@drawable/textlines"/>

                                    <android.support.v4.widget.Space
                                        android:layout_width="0dp"
                                        android:layout_weight="5"
                                        android:layout_height="match_parent" />


                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="25"
                                        android:layout_height="match_parent">

                                        <ImageButton
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_centerInParent="true"/>

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:orientation="horizontal"
                                    android:weightSum="100">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="70"
                                        android:orientation="vertical"
                                        android:layout_height="match_parent"
                                        android:weightSum="100">


                                        <TextView
                                            android:id="@+id/task_event_view_description"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="60"
                                            android:text="Event's desc test example"
                                            android:textSize="14sp"
                                            />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="40"
                                            android:orientation="horizontal"
                                            android:weightSum="100">

                                            <RelativeLayout
                                                android:layout_width="0dp"
                                                android:layout_weight="40"
                                                android:layout_height="match_parent">

                                                <TextView
                                                    android:id="@+id/task_event_view_planned_date"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerInParent="true"
                                                    android:textStyle="bold"
                                                    android:textSize="14sp"
                                                    android:text="XX/XX/XXXX"
                                                    />

                                            </RelativeLayout>

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_weight="60"
                                                android:layout_height="match_parent"
                                                android:orientation="horizontal"
                                                android:weightSum="90">

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_weight="30"
                                                    android:layout_height="match_parent">

                                                    <ImageButton
                                                        android:id="@+id/task_event_view_cancelled_indicator"
                                                        android:layout_width="40dp"
                                                        android:layout_height="40dp"
                                                        android:layout_centerInParent="true"
                                                        android:background="@android:color/transparent"/>


                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_weight="30"
                                                    android:layout_height="match_parent">

                                                    <ImageButton
                                                        android:id="@+id/task_event_view_closed_indicator"
                                                        android:layout_width="40dp"
                                                        android:layout_height="40dp"
                                                        android:layout_centerInParent="true"
                                                        android:background="@android:color/transparent"/>


                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="0dp"
                                                    android:layout_weight="30"
                                                    android:layout_height="match_parent">

                                                    <ImageButton
                                                        android:id="@+id/task_event_view_completed_indicator"
                                                        android:layout_width="40dp"
                                                        android:layout_height="40dp"
                                                        android:layout_centerInParent="true"
                                                        android:background="@android:color/transparent"/>


                                                </RelativeLayout>

                                            </LinearLayout>


                                        </LinearLayout>

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="30"
                                        android:layout_height="match_parent">

                                        <ProgressBar
                                            android:id="@+id/task_event_view_progress_bar"
                                            style="?android:attr/progressBarStyleHorizontal"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/circular_shape_01"
                                            android:indeterminate="false"
                                            android:max="100"
                                            android:progress="75"
                                            android:progressDrawable="@drawable/circular_progress_bar">

                                        </ProgressBar>

                                        <TextView
                                            android:id="@+id/task_event_view_progress_bar_advance_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:textSize="18sp"
                                            android:textStyle="bold"
                                            android:labelFor="@id/task_progress_bar"
                                            android:background="@android:color/transparent"
                                            android:text="55%"/>

                                    </RelativeLayout>

                                </LinearLayout>

                                <android.support.v4.widget.Space
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal"
                                    android:weightSum="100">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="30"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:weightSum="100">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_weight="50"
                                            android:layout_height="0dp"
                                            android:textAlignment="center"
                                            android:text="Cant. planeada"
                                            android:textSize="14sp"/>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="50"
                                            android:orientation="horizontal"
                                            android:weightSum="100">

                                            <TextView
                                                android:id="@+id/task_event_view_planned_quantity"
                                                android:layout_width="0dp"
                                                android:layout_weight="80"
                                                android:layout_height="match_parent"
                                                android:textAlignment="viewEnd"
                                                android:textStyle="bold"
                                                android:textSize="12sp"
                                                android:text="1000"/>

                                            <TextView
                                                android:id="@+id/task_event_view_planned_unit"
                                                android:layout_width="0dp"
                                                android:layout_weight="20"
                                                android:layout_height="match_parent"
                                                android:textAlignment="center"
                                                android:textSize="12sp"
                                                android:textStyle="bold"
                                                android:text="UD"/>

                                        </LinearLayout>



                                    </LinearLayout>

                                    <android.support.v4.widget.Space
                                        android:layout_width="0dp"
                                        android:layout_weight="5"
                                        android:layout_height="match_parent" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="40"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:weightSum="100">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_weight="50"
                                            android:layout_height="0dp"
                                            android:textStyle="bold"
                                            android:textAlignment="center"
                                            android:text="Notificar a partir de"
                                            android:textSize="14sp"/>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="50"
                                            android:orientation="horizontal"
                                            android:weightSum="100">

                                            <TextView
                                                android:id="@+id/task_event_view_notif_quantity"
                                                android:layout_width="0dp"
                                                android:layout_weight="80"
                                                android:layout_height="match_parent"
                                                android:textAlignment="viewEnd"
                                                android:textStyle="bold"
                                                android:textSize="12sp"
                                                android:text="1000"/>

                                            <TextView
                                                android:id="@+id/task_event_view_notif_type"
                                                android:layout_width="0dp"
                                                android:layout_weight="20"
                                                android:layout_height="match_parent"
                                                android:textAlignment="center"
                                                android:textSize="12sp"
                                                android:textStyle="bold"
                                                android:text="UD"/>

                                        </LinearLayout>



                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="25"
                                        android:layout_height="match_parent">

                                        <ImageButton
                                            android:id="@+id/task_event_view_modify_notif_time"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:tint="@color/blue_A700"
                                            app:srcCompat="@android:drawable/ic_menu_edit"
                                            android:background="@drawable/button_press_selector"/>

                                    </RelativeLayout>


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:background="@color/grey_800"></LinearLayout>

                                <android.support.v4.widget.Space
                                    android:layout_width="match_parent"
                                    android:layout_height="8dp" />

                                <ScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="225dp">

                                </ScrollView>

                            </LinearLayout>

                            <android.support.v4.widget.Space
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:layout_height="match_parent" />




                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:orientation="horizontal"
                                android:weightSum="100">

                                <android.support.v4.widget.Space
                                    android:layout_width="0dp"
                                    android:layout_weight="5"
                                    android:layout_height="match_parent" />

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="45"
                                    android:layout_height="match_parent">

                                    <ImageButton
                                        android:id="@+id/task_event_view_go_back_button"
                                        android:layout_width="65dp"
                                        android:layout_height="65dp"
                                        android:background="@drawable/circular_shape_02"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentBottom="true"
                                        android:contentDescription="new_task"
                                        android:tint="@color/white"
                                        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

                                </RelativeLayout>


                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="45"
                                    android:layout_height="match_parent">

                                    <ImageButton
                                        android:id="@+id/task_event_view_new_fact_button"
                                        android:layout_width="65dp"
                                        android:layout_height="65dp"
                                        android:background="@drawable/circular_shape_02"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentBottom="true"
                                        android:contentDescription="new_task"
                                        android:tint="@color/white"
                                        app:srcCompat="@android:drawable/ic_input_add" />

                                </RelativeLayout>

                                <android.support.v4.widget.Space
                                    android:layout_width="0dp"
                                    android:layout_weight="5"
                                    android:layout_height="match_parent" />

                            </LinearLayout>

                            <android.support.v4.widget.Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />


                        </LinearLayout>






                    </RelativeLayout>



                </LinearLayout>

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:background="@color/grey_800"
                android:orientation="vertical">

            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>



</android.support.constraint.ConstraintLayout>