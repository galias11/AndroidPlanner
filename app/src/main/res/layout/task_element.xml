<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="100"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="95"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/task_element"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/layout_borders_shape_task">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <TextView
                    android:id="@+id/task_element_title"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:text="@string/task_element_example_title"
                    android:textColor="@color/grey_800"
                    android:textSize="22sp" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/task_element_desc"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:lines="4"
                        android:text="@string/Task_element_example_desc"
                        android:textColor="@color/grey_800"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/task_element_first_date"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:lines="4"
                        android:text="@string/Task_element_first_date"
                        android:textColor="@color/grey_800"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp">

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="vertical">



                        <ProgressBar
                            android:id="@+id/task_progress_bar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal = "true"
                            android:layout_centerVertical="true"
                            android:indeterminate="false"
                            android:background="@drawable/circular_shape_01"
                            android:progressDrawable="@drawable/circular_progress_bar"
                            android:max="100"
                            android:progress="75">

                        </ProgressBar>

                        <TextView
                            android:id="@+id/task_element_progress_bar_advance_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:labelFor="@id/task_progress_bar"
                            android:background="@android:color/transparent"
                            android:text="55%"/>



                    </RelativeLayout>
                </LinearLayout>


            </TableRow>



        </TableLayout>

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingTop="15dp"
            >

            <ImageButton
                android:id="@+id/task_view_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:tint="@color/blue_A700"
                app:srcCompat="@android:drawable/ic_menu_edit"
                android:background="@drawable/button_press_selector"/>

        </LinearLayout>

    </RelativeLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

